<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ypap.StudentPU" version="1.0.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="Badge">
        <param name="android-package" value="de.appplant.cordova.plugin.badge.Badge" />
    </feature>
    <name>Student PU</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="nandang.mulyadi@podomorouniversity.ac.id" href="http://podomorouniversity.ac.id">
        IT PU Team
    </author>
    <content src="template/login.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/icon/android/mipmap-mdpi/ic_student_2.png" />
    <icon density="hdpi" src="res/icon/android/mipmap-hdpi/ic_student_2.png" />
    <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/ic_student_2.png" />
    <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/ic_student_2.png" />
    <resource-file src="res/my_notification_icon/android/drawable-mdpi/ic_stat_logo_pu_notif.png" target="app/src/main/res/drawable-mdpi/ic_stat_logo_pu_notif.png" />
    <resource-file src="res/my_notification_icon/android/drawable-hdpi/ic_stat_logo_pu_notif.png" target="app/src/main/res/drawable-hdpi/ic_stat_logo_pu_notif.png" />
    <resource-file src="res/my_notification_icon/android/drawable-xhdpi/ic_stat_logo_pu_notif.png" target="app/src/main/res/drawable-xhdpi/ic_stat_logo_pu_notif.png" />
    <resource-file src="res/my_notification_icon/android/drawable-xxhdpi/ic_stat_logo_pu_notif.png" target="app/src/main/res/drawable-xxhdpi/ic_stat_logo_pu_notif.png" />
    <resource-file src="res/my_notification_icon/android/drawable-xxxhdpi/ic_stat_logo_pu_notif.png" target="app/src/main/res/drawable-xxxhdpi/ic_stat_logo_pu_notif.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="StatusBarBackgroundColor" value="#004977" />
</widget>
